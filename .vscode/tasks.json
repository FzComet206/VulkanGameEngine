{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "compile",
            "command": "g++.exe",

            "args": [

                "-g",
                "-o",
                "${workspaceFolder}/bin/engine.exe",

                // cpp file
                "${workspaceFolder}/src/*.cpp",

                // includes
                "-I${workspaceFolder}/lib/VulkanSDK/1.3.216.0/Include",
                "-I${workspaceFolder}/lib/glfw-3.3.8.bin.WIN64/include",
                "-I${workspaceFolder}/lib/glm",

                // library paths
                "-L${workspaceFolder}/lib/glfw-3.3.8.bin.WIN64/lib-mingw-w64",
                "-L${workspaceFolder}/lib/VulkanSDK/1.3.216.0/Lib",

                // libraries
                "-lglfw3dll",
                "-lvulkan-1",
            ],


            "group": {
                "kind": "build",
                "isDefault": true
            }

        }
    ]
}